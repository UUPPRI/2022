YEAR="2022"

function mkidx {
    cd $1
    printf -- '---\nlayout: "layout"\n---\n# %s\n' $YEAR  >  index.md
    for II in $(ls) ; do
        [ "$II" == "index.md" ] && continue
        [ -f $II ] && echo "* [$II]($II)"       >> index.md
        [ -d $II ] && echo "* [$II]($II/)"      >> index.md
        [ -d $II ] && $(mkidx $II)
    done

    cd ..
}

README="00-README-ls-alR"
cat > ${README}.md << EOF
---
layout: "layout"
---

<br>
# $YEAR
\`\`\`
EOF
ls -R >> ${README}.md
cat   >> ${README}.md << EOF
\`\`\`
EOF


for II in \
    ${README}.md  \
    45UUD         \
    BI            \
    IDX           \
    INPRES        \
    KEPMEN        \
    KEPMENKO      \
    KEPSESMENKO   \
    KEPPRES       \
    MK            \
    MPR           \
    PERPRES       \
    PERDA         \
    PERKA         \
    PERMEN        \
    PERMENKO      \
    PERPU         \
    PNPS          \
    PP            \
    SKB           \
    UI            \
    UU            \
; do
    [ -d $II ] && mkidx $II
done

exit 0

